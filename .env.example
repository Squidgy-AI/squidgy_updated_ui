# Environment Configuration for Squidgy Frontend
# Note: All variables prefixed with VITE_ are exposed to the client-side code

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
VITE_APP_NAME=Squidgy
VITE_APP_ENV=development
VITE_APP_URL=http://localhost:5173

# =============================================================================
# API CONFIGURATION
# =============================================================================
VITE_API_BASE_URL=http://localhost:8000
# Production: https://squidgy-back-919bc0659e35.herokuapp.com

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================
# Database and Authentication
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================
# Builder.io Configuration
VITE_BUILDER_PUBLIC_KEY=your_builder_key_here

# =============================================================================
# DEVELOPMENT/DEBUG
# =============================================================================
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info

# =============================================================================
# INTEGRATIONS
# =============================================================================
# N8N Workflow Integration
VITE_N8N_WEBHOOK_URL=https://your-n8n-webhook-url

# =============================================================================
# SERVER-SIDE SECRETS (Not exposed to client)
# =============================================================================
# Database Connection
DATABASE_URL=postgresql://username:password@host:port/database

# API Keys
OPENAI_API_KEY=your-openai-api-key
SOLAR_API_KEY=your-solar-api-key
PERPLEXITY_API_KEY=your-perplexity-api-key
APIFY_API_KEY=your-apify-api-key
HEYGEN_API_KEY=your-heygen-api-key
