# Environment Configuration for Squidgy Frontend
# Note: All variables prefixed with VITE_ are exposed to the client-side code
# Copy this file to .env and fill in your actual values

# =============================================================================
# REQUIRED BACKEND API CONFIGURATION
# =============================================================================
# Backend API URL - REQUIRED (no fallbacks)
VITE_BACKEND_URL=http://localhost:8000
VITE_API_BASE_URL=http://localhost:8000

# =============================================================================
# REQUIRED SUPABASE CONFIGURATION
# =============================================================================
# Database and Authentication - REQUIRED
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# =============================================================================
# REQUIRED FRONTEND CONFIGURATION
# =============================================================================
# Frontend URL for redirects - REQUIRED
VITE_FRONTEND_URL=http://localhost:5173

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================
# N8N Workflow Integration - Optional
VITE_N8N_WEBHOOK_URL=https://your-n8n-webhook-url

# =============================================================================
# OPTIONAL APPLICATION SETTINGS
# =============================================================================
VITE_APP_NAME=Squidgy
VITE_APP_ENV=development

# =============================================================================
# OPTIONAL DEBUG CONFIGURATION
# =============================================================================
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL=info
